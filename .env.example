# ── BytsOne ────────────────────────────────────────────────────────────────────
BYTESONE_URL=https://www.bytsone.com/home/courses

# Which courses to process (comma-separated, order = execution order)
# Options: class_problems, task_problems
COURSES_ORDER=class_problems,task_problems

# Google account used to sign in to BytsOne (Karunya institutional email)
BYTESONE_EMAIL=yourname@karunya.edu.in

# ── LeetCode ───────────────────────────────────────────────────────────────────
# Google account used to sign in to LeetCode (personal Gmail)
LEETCODE_EMAIL=yourname@gmail.com

# ── LLM Provider ───────────────────────────────────────────────────────────────
# Choose one: openrouter | openai | anthropic
LLM_PROVIDER=openrouter
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# OpenRouter Settings (default — recommended)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_MODEL=minimax/minimax-m2.5
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TEMPERATURE=0.2
AI_MAX_DEBUG_CYCLES=3

# OpenAI Settings (only needed if LLM_PROVIDER=openai)
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.2

# Anthropic Settings (only needed if LLM_PROVIDER=anthropic)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.2

# ── Browser ────────────────────────────────────────────────────────────────────
SLOW_MO=100
HEADLESS=false                  # Keep false — needed to see login prompts
BROWSER_PROFILE_DIR=browser_profile   # Chromium profile kept between runs

# ── Session & Progress ─────────────────────────────────────────────────────────
SESSION_FILE=storage_state.json       # Auto-created after first login
PROGRESS_FILE=progress.json           # Tracks which problems are solved

# ── Timeouts & Retries ─────────────────────────────────────────────────────────
MAX_RETRIES=3
RETRY_DELAY=2
PAGE_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
LOGIN_WAIT_TIMEOUT=300000       # 5 minutes for manual first-run login

# ── Logging ────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log
